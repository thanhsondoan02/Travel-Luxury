<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:id="@+id/mcvReserveAccountInfoIcon"
            app:cardCornerRadius="30dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/jennie_smile"
                android:layout_height="50dp" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/mcvReserveAccountInfoIcon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReserveAccountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#434343"
                android:layout_marginStart="10dp"
                android:text="@string/logged_in_as" />

            <TextView
                android:id="@+id/tvReserveAccountEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="#8f8f8f"
                android:layout_marginStart="10dp"
                android:text="@string/email" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
