<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlSettingContentContainer"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/ivSettingContentIcon"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/ic_my_account_gray"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvSettingContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#434343"
            android:text="@string/account_information"
            android:layout_toEndOf="@id/ivSettingContentIcon"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#e6eaed" />

    </RelativeLayout>

</RelativeLayout>
