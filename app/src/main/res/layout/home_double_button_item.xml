<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/btnHomeDoubleButtonDomestic"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/main_blue_color"
                android:paddingHorizontal="16dp"
                android:text="@string/domestic_destinations"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/btnHomeDoubleButtonInternational"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/white"
                android:paddingHorizontal="16dp"
                android:text="@string/international_destinations"
                android:textAllCaps="false"
                android:textColor="@color/main_blue_color"
                android:textSize="13sp" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</RelativeLayout>
